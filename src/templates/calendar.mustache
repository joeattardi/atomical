<div class="{{classes.calendar}}">
  <div class="{{classes.title}}"><h2>{{month}} {{year}}</h2></div>
  <div class="{{classes.days}}">
    {{#dayLabels}}<div class="{{classes.dayHeader}}">{{.}}</div>{{/dayLabels}}
  </div>
  <div class="{{classes.grid}}">
    {{#beginPlaceholders}}
      <div class="{{classes.placeholder}}"></div>
    {{/beginPlaceholders}}

    {{#days}}
      <div class="{{classes.day}}"><div>{{.}}</div></div>
    {{/days}}

    {{#endPlaceholders}}
      <div class="{{classes.placeholder}}"></div>
    {{/endPlaceholders}}
  </div>
</div>
